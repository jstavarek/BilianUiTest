<bv:UserControlViewWithModel x:Class="BilianUiTest.Avalonia.ItemsView" x:TypeArguments="bUiTest:ItemsViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:bv="clr-namespace:Bilian.Ui.Avalonia;assembly=Bilian.Ui.Avalonia"
	xmlns:bUiTest="clr-namespace:BilianUiTest;assembly=BilianUiTest"
	xmlns:local="clr-namespace:BilianUiTest.Avalonia"
	mc:Ignorable="d" x:DataType="local:ItemsView">

    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Top" Content="Add" Command="{Binding Path=Model.AddCommand}"/>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="0,20,0,0">
            <StackPanel x:Name="itemsStackPanel" Margin="0,0,10,0"/>
        </ScrollViewer>
    </DockPanel>
</bv:UserControlViewWithModel>
