<bv:WindowViewWithModel x:Class="BilianUiTest.Mvvm.WinUi.NonModalWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:bv="using:Bilian.Ui.WinUi"
    xmlns:local="clr-namespace:BilianUiTest.Mvvm.WinUi"
    Title="Form window"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance local:NonModalWindowView, d:IsDesignTimeCreatable=False}">
    <!--Title="Form window" SizeToContent="WidthAndHeight" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" ShowInTaskbar="False">-->

    <!--<behaviors:Interaction.Behaviors>
        <local:ElementFocusBehaviour/>
    </behaviors:Interaction.Behaviors>-->

    <StackPanel HorizontalAlignment="Left" Width="300" Margin="20">
        <TextBlock Text="Type text"/>
        <TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Path=Model.Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="OK" Command="{Binding Path=Model.SubmitCommand}" Margin="0,20,0,0" HorizontalAlignment="Right"/>
    </StackPanel>
</bv:WindowViewWithModel>
