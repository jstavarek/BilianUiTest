<?xml version="1.0" encoding="utf-8" ?>
<bv:ContentViewViewWithModel x:Class="BilianUiTest.Mvvm.Maui.ItemsView" x:TypeArguments="bUiTest:ItemsViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:bv="clr-namespace:Bilian.Ui.Maui;assembly=Bilian.Ui.Maui"
    xmlns:bUiTest="clr-namespace:BilianUiTest.Mvvm;assembly=BilianUiTest.Mvvm"
    xmlns:local="clr-namespace:BilianUiTest.Mvvm.Maui"
    x:DataType="local:ItemsView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Text="Add" Command="{Binding Path=Model.AddCommand}"/>

        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Default" HorizontalOptions="Start" VerticalOptions="Fill" Margin="0,20,0,0">
            <VerticalStackLayout x:Name="itemsContainer" Margin="0,0,10,0"/>
        </ScrollView>
    </Grid>
</bv:ContentViewViewWithModel>
