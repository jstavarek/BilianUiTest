<bv:DialogWindowViewWithModel x:Class="BilianUiTest.Mvvm.Wpf.ModalDialogView" x:TypeArguments="bUiTest:ModalDialogViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:bv="clr-namespace:Bilian.Ui.Wpf;assembly=Bilian.Ui.Wpf"
    xmlns:bUiTest="clr-namespace:BilianUiTest.Mvvm;assembly=BilianUiTest.Mvvm"
    xmlns:local="clr-namespace:BilianUiTest.Mvvm.Wpf"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance local:ModalDialogView, d:IsDesignTimeCreatable=False}"    
    Title="Modal dialog" SizeToContent="WidthAndHeight" WindowStyle="SingleBorderWindow" ResizeMode="NoResize" ShowInTaskbar="False">

    <behaviors:Interaction.Behaviors>
        <local:ElementFocusBehaviour/>
    </behaviors:Interaction.Behaviors>

    <StackPanel HorizontalAlignment="Left" Width="300" Margin="20">
        <Label Content="Type text"/>
        <TextBox Text="{Binding Path=Model.Text, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Ok" Command="{bv:CommandBinding Path=Model.ConfirmCommand}"  IsDefault="True"/>
            <Button Content="Cancel" Command="{bv:CommandBinding Path=Model.CancelCommand}" Margin="20,0,0,0" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</bv:DialogWindowViewWithModel>
