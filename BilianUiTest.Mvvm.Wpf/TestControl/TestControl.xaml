<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bWpf="clr-namespace:Bilian.Ui.Wpf;assembly=Bilian.Ui.Wpf"
    xmlns:local="clr-namespace:BilianUiTest.Mvvm.Wpf">

    <Style x:Key="TestControlStyle" TargetType="{x:Type local:TestControl}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TestControl}">
                    <StackPanel>
                        <TextBlock Text="{Binding Path=Title, RelativeSource={RelativeSource TemplatedParent}}"/>
                        <TextBlock Text="{Binding Path=Model.Value, RelativeSource={RelativeSource TemplatedParent}}" FontWeight="Bold"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>