<bv:WindowViewWithModel x:Class="BilianUiTest.Mvvm.Wpf.MainView" x:TypeArguments="bUiTest:MainViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:bv="clr-namespace:Bilian.Ui.Wpf;assembly=Bilian.Ui.Wpf"
    xmlns:bUiTest="clr-namespace:BilianUiTest.Mvvm;assembly=BilianUiTest.Mvvm"
    xmlns:local="clr-namespace:BilianUiTest.Mvvm.Wpf"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance local:MainView, d:IsDesignTimeCreatable=False}"
    Title="Bilian.UI WPF MVVM examples" WindowState="Maximized" ShowInTaskbar="True"
    x:Name="thisView">

    <TabControl>
        <TabItem Header="Windows">
            <StackPanel Orientation="Horizontal" Margin="30,30,0,0">
                <Button Content="Form window" Command="{bv:CommandBinding Path=Model.OpenDialogCommand}"/>
                <Button Content="Form dialog" Command="{bv:CommandBinding Path=Model.OpenModalDialogCommand}" Margin="20,0,0,0"/>
            </StackPanel>
        </TabItem>
        
        <TabItem Header="User controls">
            <local:ExampleUserControlView Model="{Binding Path=Model.ExampleControlViewModel, ElementName=thisView}" Margin="30,30,0,0"/>
        </TabItem>

        <TabItem Header="Advanced">
            <StackPanel Orientation="Horizontal" Margin="30,30,0,0" VerticalAlignment="Top">
                <Button Content="Message" Command="{bv:CommandBinding Path=Model.ShowMessageCommand}"/>
                <Button Content="Error" Command="{bv:CommandBinding Path=Model.InvokeExceptionCommand}" Margin="20,0,0,0"/>
                <Button Content="Query" Command="{bv:CommandBinding Path=Model.QueryUserCommand}" Margin="20,0,0,0"/>
                <Button Content="Pick file" Command="{bv:CommandBinding Path=Model.PickFileCommand}" Margin="20,0,0,0"/>
                <Button Content="Set file name file" Command="{bv:CommandBinding Path=Model.SetFileNameCommand}" Margin="20,0,0,0"/>
                <Button Content="Pick folder" Command="{bv:CommandBinding Path=Model.PickFolderCommand}" Margin="20,0,0,0"/>
            </StackPanel>
        </TabItem>

        <TabItem Header="Items">
            <local:ItemsView Model="{Binding Path=Model.ItemsViewModel, ElementName=thisView}" Margin="30,30,0,0"/>
        </TabItem>

        <TabItem Header="Custom user interactions">
            <local:CustomUserInteractionExampleView Model="{Binding Path=Model.CustomUserInteractionExampleViewModel, ElementName=thisView}" Margin="30,30,0,0"/>
        </TabItem>

        <TabItem Header="ViewLoader">
            <bv:ViewLoader GetViewModel="{Binding Path=Model.GetLazyLoadedViewModel}" Margin="30,30,0,0"/>
        </TabItem>

        <TabItem Header="UI actions">
            <Button Content="Action" Command="{bv:CommandBinding Path=Model.DoActionCommand}" Margin="30,30,0,0"/>
        </TabItem>

        <TabItem Header="Content control view">
            <local:TestControl Title="{Binding Path=Model.ValueElementTitle}" Model="{Binding Path=Model.CustomControlViewModel}" Margin="30,30,0,0"/>
        </TabItem>
    </TabControl>
</bv:WindowViewWithModel>