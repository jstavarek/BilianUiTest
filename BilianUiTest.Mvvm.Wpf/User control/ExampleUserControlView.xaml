<bv:UserControlViewWithModel x:Class="BilianUiTest.Mvvm.Wpf.ExampleUserControlView" x:TypeArguments="bUiTest:SimpleFormViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:bv="clr-namespace:Bilian.Ui.Wpf;assembly=Bilian.Ui.Wpf"
    xmlns:bUiTest="clr-namespace:BilianUiTest.Mvvm;assembly=BilianUiTest.Mvvm"
    xmlns:local="clr-namespace:BilianUiTest.Mvvm.Wpf"
    mc:Ignorable="d" d:DataContext="{d:DesignInstance local:ExampleUserControlView, d:IsDesignTimeCreatable=False}">

    <behaviors:Interaction.Behaviors>
        <local:ElementFocusBehaviour/>
    </behaviors:Interaction.Behaviors>

    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="400">
        <Label Content="Type text"/>
        <TextBox Text="{Binding Path=Model.Text, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Path=Message}" TextWrapping="Wrap" Foreground="Red" Margin="0,10,0,0"/>
        <Button Content="Ok" Command="{bv:CommandBinding Path=Model.ConfirmCommand}" IsDefault="True" Margin="0,20,0,0" HorizontalAlignment="Right"/>
    </StackPanel>
</bv:UserControlViewWithModel>
