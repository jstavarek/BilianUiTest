<bv:DialogWindowViewWithModel x:Class="BilianUiTest.Mvvm.Avalonia.ModalWindowView" x:TypeArguments="bUiTest:ModalDialogViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Xaml.Behaviors.Interactivity"
	xmlns:bv="clr-namespace:Bilian.Ui.Avalonia;assembly=Bilian.Ui.Avalonia"
	xmlns:bUiTest="clr-namespace:BilianUiTest.Mvvm;assembly=BilianUiTest.Mvvm"
	xmlns:local="clr-namespace:BilianUiTest.Mvvm.Avalonia"
	mc:Ignorable="d" x:DataType="local:ModalWindowView"
	Title="Example dialog" SizeToContent="WidthAndHeight">
	
	<i:Interaction.Behaviors>
		<bv:ElementFocusBehaviour/>
	</i:Interaction.Behaviors>

	<StackPanel HorizontalAlignment="Left" Width="300" IsTabStop="False">
		<Label Content="Type text" IsTabStop="False"/>
		<TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Path=Model.Text}"/>
		<Button Content="Ok" Command="{Binding Path=Model.ConfirmCommand}" Margin="0,20,0,0" HorizontalAlignment="Right" IsDefault="True"/>
	</StackPanel>
</bv:DialogWindowViewWithModel>
