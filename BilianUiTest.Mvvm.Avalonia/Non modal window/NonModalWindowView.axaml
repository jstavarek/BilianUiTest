<bv:WindowViewWithModel x:Class="BilianUiTest.Mvvm.Avalonia.NonModalWindowView" x:TypeArguments="bUiTest:DialogViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Xaml.Behaviors.Interactivity"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:bv="clr-namespace:Bilian.Ui.Avalonia;assembly=Bilian.Ui.Avalonia"
	xmlns:bUiTest="clr-namespace:BilianUiTest.Mvvm;assembly=BilianUiTest.Mvvm"
	xmlns:local="clr-namespace:BilianUiTest.Mvvm.Avalonia"
	mc:Ignorable="d" x:DataType="local:NonModalWindowView"
	Title="Form window" SizeToContent="WidthAndHeight" CanResize="False" ShowInTaskbar="False" CanMinimize="False">
	
	<i:Interaction.Behaviors>
		<local:ElementFocusBehaviour/>
	</i:Interaction.Behaviors>

	<StackPanel HorizontalAlignment="Left" Width="300" IsTabStop="False" Margin="20">
		<Label Content="Type text" IsTabStop="False"/>
		<TextBox HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding Path=Model.Text}"/>
		<Button Content="OK" Command="{Binding Path=Model.SubmitCommand}" Margin="0,20,0,0" HorizontalAlignment="Right" IsDefault="True"/>
	</StackPanel>
</bv:WindowViewWithModel>
