<bv:UserControlViewWithModel x:Class="BilianUiTest.Mvvm.Avalonia.ExampleUserControlView" x:TypeArguments="bUiTest:FormViewModel"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Xaml.Behaviors.Interactivity"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:bv="clr-namespace:Bilian.Ui.Avalonia;assembly=Bilian.Ui.Avalonia"
	xmlns:bUiTest="clr-namespace:BilianUiTest.Mvvm;assembly=BilianUiTest.Mvvm"
	xmlns:local="clr-namespace:BilianUiTest.Mvvm.Avalonia"
	mc:Ignorable="d" x:DataType="local:ExampleUserControlView">

	<i:Interaction.Behaviors>
		<bv:ElementFocusBehaviour/>
	</i:Interaction.Behaviors>
	
	<StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" IsTabStop="False">
		<Label Content="Type text" IsTabStop="False"/>
		<TextBox VerticalAlignment="Top" Text="{Binding Path=Model.Text}"/>
		<TextBlock Text="{Binding Path=Message}" TextWrapping="Wrap" Foreground="Red" Margin="0,10,0,0" IsTabStop="False"/>
		<Button Content="Ok" Command="{Binding Path=Model.ConfirmCommand}" Margin="0,20,0,0" HorizontalAlignment="Right"/>
	</StackPanel>
</bv:UserControlViewWithModel>
