<bv:UserControlViewWithModel x:Class="BilianUiTest.Wpf.ItemView" x:TypeArguments="bUiTest:ItemViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:bv="clr-namespace:Bilian.Ui.Wpf;assembly=Bilian.Ui.Wpf"
        xmlns:bUiTest="clr-namespace:BilianUiTest;assembly=BilianUiTest"
        xmlns:local="clr-namespace:BilianUiTest.Wpf"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance local:ItemView, d:IsDesignTimeCreatable=False}">

    <Border BorderBrush="LightGray" BorderThickness="2" Margin="0,0,0,20" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="10">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="500">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Bottom">
                    <Button Content="Apply" Command="{bv:CommandBinding Path=Model.ConfirmEntriesCommand}"/>
                    <Button Content="Remove" Command="{bv:CommandBinding Path=Model.RemoveCommand}" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel>
                    <Label Content="Type text"/>
                    <TextBox VerticalAlignment="Top" Text="{Binding Path=Model.Text, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </DockPanel>
            <TextBlock Text="{Binding Path=Message}" TextWrapping="Wrap" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</bv:UserControlViewWithModel>
